{
	"compilerOptions": {
		"target": "ES2019",
		"strict": true,
		"noImplicitAny": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"composite": true,
		"outDir": ".dist",
		"rootDir": "src",
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"**/node_modules/",
		"node_modules"
	],
}